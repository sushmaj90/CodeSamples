<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/response_scroll"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical"
    android:background="@drawable/crossword"
    tools:context="com.example.sushma.apt_finalandroid.UserProfile"
    >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent"
    android:scrollbars="vertical"
        >
        <ImageView
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:id="@+id/imageview_profile"
            android:layout_alignParentTop="true"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"/>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_toRightOf="@+id/imageview_profile"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="25dp"
            android:orientation="vertical"
            android:focusableInTouchMode="true"
            >

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:text="User name"
            android:layout_toRightOf="@+id/imageview_profile"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="18dp"
            android:textColor="#660066"/>

        <TextView
            android:id="@+id/university"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:text="University"
            android:layout_below="@+id/username"
            android:layout_toRightOf="@+id/imageview_profile"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="18dp"
            android:textColor="#660066"/>

        <TextView
            android:id="@+id/useremail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="Email ID"
            android:layout_below="@+id/university"
            android:layout_toRightOf="@+id/imageview_profile"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="18dp"
            android:textColor="#660066"/>

            <TextView
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:layout_below="@+id/university"
                android:layout_toRightOf="@+id/imageview_profile"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="18dp"
                android:text="Rating"
                android:textColor="#660066"
                />
            <TextView
                android:id="@+id/numRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:layout_below="@+id/university"
                android:layout_toRightOf="@+id/imageview_profile"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="18dp"
                android:textColor="#660066"
                />

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_below="@+id/imageview_profile"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Most viewed Books"
                android:textColor="#660066"
                android:textSize="15sp"
                />
            <GridView
                android:numColumns="auto_fit"
                android:columnWidth="120dp"
                android:stretchMode="columnWidth"
                android:layout_width="370dp"
                android:layout_height="200dp"
                android:layout_marginTop="6dp"
                android:id="@+id/gridProfile"
                android:scrollbars="vertical"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                />
            <View
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:layout_height="2dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#e9e9e9"/>
            <TextView
                android:id="@+id/textnearby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Books near me"
                android:textStyle="italic"
                android:textColor="#660066"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                />
            <GridView
                android:numColumns="auto_fit"
                android:columnWidth="120dp"
                android:stretchMode="columnWidth"
                android:layout_width="370dp"
                android:layout_height="200dp"
                android:layout_marginTop="6dp"
                android:id="@+id/gridNearby"
                android:scrollbars="vertical"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                />
            <View
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:layout_height="2dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#e9e9e9"/>
            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Books I own"
                android:textStyle="italic"
                android:layout_marginTop="10dp"
                android:textColor="#660066"
                android:textSize="15sp"
                />

            <GridView
                android:numColumns="auto_fit"
                android:gravity="center"
                android:columnWidth="120dp"
                android:stretchMode="columnWidth"
                android:layout_width="370dp"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:id="@+id/gridProfile1"
                android:scrollbars="vertical"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                />
            <View
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:layout_height="2dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#e9e9e9"/>

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Books I need to return"
                android:textStyle="italic"
                android:layout_marginTop="10dp"
                android:textColor="#660066"
                android:textSize="15sp"
                />

            <GridView
                android:numColumns="auto_fit"
                android:gravity="center"
                android:columnWidth="120dp"
                android:stretchMode="columnWidth"
                android:layout_width="370dp"
                android:layout_height="200dp"
                android:layout_marginTop="6dp"
                android:id="@+id/gridProfile2"
                android:scrollbars="vertical"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                />
            <View
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:layout_height="2dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#e9e9e9"/>
            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My books given for rent"
                android:layout_marginTop="10dp"
                android:textStyle="italic"
                android:textColor="#660066"
                android:textSize="15sp"
                />

            <GridView
                android:numColumns="auto_fit"
                android:gravity="center"
                android:columnWidth="120dp"
                android:stretchMode="columnWidth"
                android:layout_width="370dp"
                android:layout_height="200dp"
                android:layout_marginTop="6dp"
                android:id="@+id/gridProfile3"
                android:scrollbars="vertical"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                />

            </LinearLayout>
</RelativeLayout>
</ScrollView>
